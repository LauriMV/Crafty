{% extends "producto/baseProducto.html.twig" %}

{% block contenido %}
<h2>Listado de Productos</h2>
{% for mensaje in app.flashes('exito') %}
<p>{{mensaje}} </p>
{% endfor %}
<div class="row row-cols-1 row-cols-md-2">
    {% for producto in productos %}
    <div class="col mb-4">
        <div class="card" style="width: 18rem;">
            <img src="{{producto.imagen }}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{ producto.nombre }}</h5>
                <p class="card-text">{{ producto.descripcion }}</p>
                <a href="{{path('showProduct', {'id':producto.id})}}" class="btn btn-primary">MÃ¡s Info</a>
                <a href="{{path('editProducto', {'id':producto.id})}}" class="btn btn-secondary">Editar</a>
                <a href="{{path('deleteProducto', {'id':producto.id})}}" class="btn btn-danger">Borrar</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}